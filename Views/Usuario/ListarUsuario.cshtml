@model GlovoSoft.Integration.DTO.Usuario

@{
    ViewData["Title"] = "Perfil de Usuario";
}
<div class="container" >

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-body">
                    <h2 class="card-title">@Model.last_name</h2>
                    <h5 class="card-subtitle mb-2 text-muted">ID: @Model.Id</h5>

                    <div class="row">
                        <div class="col-md-4">
                            <img src="@Model.Avatar" alt="Avatar" class="img-fluid rounded-circle"
                                style="width:100px;height:100px;" />
                        </div>
                        <div class="col-md-8">
                            <dl class="row">
                                <dt class="col-sm-4">Email:</dt>
                                <dd class="col-sm-8">@Model.Email</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>

<div style="text-align: center">
<a href="@Url.Action("ListarUsuarios", "Usuario")" class="btn btn-secondary">Volver a la lista de usuarios</a>
</div>

<style>
    .card {
        background-color: #ffffff;
        /* Fondo blanco */
        border: 1px solid #ddd;
        /* Borde delgado */
        border-radius: 10px;
        /* Bordes redondeados */
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        /* Sombra */
    }

    .card-body {
        color: #333;
        /* Color del texto */
    }

    .card-subtitle {
        color: #666;
        /* Color del subtitulo */
    }

    .btn {
        color: #ffffff;
        /* Color del texto del botón */
        background-color: #007bff;
        /* Fondo azul */
        border-color: #007bff;
        /* Color del borde del botón */
        border-radius: 25px;
        /* Bordes redondeados */
        padding: 10px 20px;
        /* Espacio alrededor del texto */
        text-decoration: none;
        /* Quita el subrayado del texto */
        transition: background-color 0.3s ease;
        /* Transición suave */
    }

    .btn:hover {
        background-color: #0056b3;
        /* Fondo azul más oscuro al pasar el mouse */
        border-color: #0056b3;
        /* Color del borde del botón al pasar el mouse */
    }
</style>