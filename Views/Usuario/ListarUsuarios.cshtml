@model List<GlovoSoft.Integration.DTO.Usuario>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Email</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Avatar</th>
            <th>Perfil</th>
        </tr>
    </thead>
    <tbody>

        @if (Model != null && Model.Count > 0)
        {
            foreach (var user in Model)
            {
                <tr>

                    <td>@user.Id</td>
                    <td>@user.Email</td>
                    <td>@user.first_name</td>
                    <td>@user.last_name</td>
                    <td><img src="@user.Avatar" alt="Avatar" class="img-fluid rounded-circle" style="width:50px;height:50px;" />
                    </td>
                    <td><a href="@Url.Action("Usuario", new { Id = user.Id })" class="btn btn-outline-secondary btn-sm">Ir a
                            Perfil</a></td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">No se han encontrado usuarios</td>
            </tr>
        }
    </tbody>
</table>